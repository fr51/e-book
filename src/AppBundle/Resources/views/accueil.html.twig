<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% block stylesheets %}
				<link rel="stylesheet" href="{{ asset('css/test.css') }}" type="text/css"/>
		{% endblock %}
	</head>
	<body>
		<div class="bouton">
			{% if not app.user %}
				<div class="connexion">
					<form class="bouton" action="http://localhost/ebook/web/app_dev.php/login" method="POST">
						<input type="submit" name="connexion" value="Connexion" />
					</form>
				</div>

				<div class="inscription">
					<form class="bouton" action="http://localhost/ebook/web/app_dev.php/register" method="POST">
						<input type="submit" name="inscription" value="Inscription" />
					</form>
				</div>
			{% else %}
				<div class="connexion">
					<form class="bouton" action="http://localhost/ebook/web/app_dev.php/logout" method="POST"> <!--à vérifier-->
						<input type="submit" name="déconnexion" value="Déconnexion" />
					</form>
				</div>
			{% endif %}
		</div>
		<div>
			<center>
				<h2>Recherche</h2>
				<form method="post" action="http://localhost/ebook/web/app_dev.php/recherche">
					<input type="text" name="lettre">
					<input type="submit" value="Recherche" />
				</form>
			</center>
		</div>
		<div class="corp">
			{% for livre in livres %}
				<div class="boucleDiv">
					<table border="1">
						<tr>
							<td rowspan=3>{{ livre.couverture }}</td>
							<td>Titre : {{ livre.titre }}</td>
						</tr>
						<tr>
							<td>Auteur : {{ livre.auteur }}</td>
						</tr>
						<tr>
							<td>Prix : {{ livre.prixUnitaire }} €</td>
						</tr>
					</table>
				</div>
			{% endfor %}
		</div>
	</body>
</html>