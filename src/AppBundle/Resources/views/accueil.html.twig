<!DOCTYPE html>
<html>
	<head>
		<title>
			accueil
		</title>

		<link rel="stylesheet" type="text/css" href="{{ asset ("css/test.css") }}">

		<link rel="icon" type="image/x-icon" href="{{ asset ("favicon.ico") }}">

		<meta charset="utf-8">
	</head>

	<body>
		{% for livre in livres %}
			<div class="boucleDiv">
				<table border="1">
					<tr>
						<td rowspan="3">
							{{ livre.couverture }}
						</td>
						<td>
							<a href="{{ path ("details", {"id": livre.id}) }}">
								{{ livre.titre }}
							</a>
						</td>
					</tr>
					<tr>
						<td>
							{{ livre.auteur }}
						</td>
					</tr>
					<tr>
						<td>
							{{ livre.prixUnitaire }}
						</td>
					</tr>
				</table>
			</div>
		{% endfor %}
	</body>
</html>