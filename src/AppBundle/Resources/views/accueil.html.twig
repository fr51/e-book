<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% block stylesheets %}
				<link rel="stylesheet" href="{{ asset('css/test.css') }}" type="text/css"/>
		{% endblock %}
	</head>
	<body>
	<div class="image">
        <div class="bouton">
            <div class="connexion">
                <form class="bouton" action="http://localhost/ebook/web/app_dev.php/login" method="POST">
                    <input type="submit" name="connexion" value="Connexion" />
                </form> 
            </div>
            <div class="inscription">
                <form class="bouton" action="http://localhost/ebook/web/app_dev.php/register" method="POST">
                    <input type="submit" name="inscription" value="Inscription" />
                </form> 
            </div>
        </div>
    </div>
    <div class="corp">
        <div class="recherche">
            <center>
                <h3>Zone de recherche</h3>
                <form method="get" action="http://localhost/ebook/web/app_dev.php/accueil">
                    Titre du livre  <input type="text" name="titre" placeholder="Rechercher">
                    Auteur du livre  <input type="text" name="auteur" placeholder="Rechercher">
                    <input type="submit" value="Recherche" />
                </form>
            </center>
        </div>
        {% for livre in livres %}
        <div class="boucleDiv">
            <table border="1">
                <tr>
                    <td rowspan="3"><img src="{{ asset('img/'~ livre.couverture)}}" width="100" height="120"></td>
                    <td>Titre : {{ livre.titre }}</td>
                </tr>
                <tr>
                    <td>Auteur : {{ livre.auteur }}</td>
                </tr>
                <tr>
                    <td>Prix : {{ livre.prixUnitaire }} â‚¬</td>
                </tr>
            </table>
        </div>
        {% endfor %}
    </div>
</body>
</html>
