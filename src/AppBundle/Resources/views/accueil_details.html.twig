<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% block stylesheets %}
				<link rel="stylesheet" href="{{ asset('css/test.css') }}" type="text/css"/>
		{% endblock %}
	</head>
	<body>
		<div class="test">
			<form class="bouton" action="http://localhost/ebook/web/app_dev.php/login" method="POST">
				<input type="submit" name="connexion" value="Déconnexion" />
			</form>
		</div>

		<br>
		<br>

		Bienvenue, {{ app.user.username }}

		<div class="corp">
			{% for livre in livres %}
				<div class="boucleDiv">
					<table border="1">
						<tr>
							<td rowspan=3>
								<a href="{{ path ("details", {"id": livre.id}) }}">
									{{ livre.couverture }}
								</a>
							</td>
							<td>
								Titre :

								<a href="{{ path ("details", {"id": livre.id}) }}">
									{{ livre.titre }}
								</a>
							</td>
						</tr>
						<tr>
							<td>Auteur : {{ livre.auteur }}</td>
						</tr>
						<tr>
							<td>Prix : {{ livre.prixUnitaire }} €</td>
						</tr>
					</table>
				</div>
			{% endfor %}
		</div>
	</body>
</html>